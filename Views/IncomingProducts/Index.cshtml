@model IEnumerable<MicrobiologyLab.Models.IncomingProduct>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.exdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.additionnalNotes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.arrdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.user)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.company)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.exdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.additionnalNotes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.arrdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.user.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.company.Comp_Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.pr_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.pr_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.pr_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
